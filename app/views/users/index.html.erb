<div class="row">
  <div class="large-8 columns">
    <img src="/assets/doctor.jpg" alt="picture of a doctor" id="doctor-img">
  </div>

  <form class="large-4 columns">
    <div class="row">
      <div class="large-12 columns">
        <ul class="tabs" data-tabs="" id="example-tabs">
          <li class="tabs-title is-active"><a href="#panelRegister" target="_self">Sign Up</a></li>
          <li class="tabs-title"><a href="#panelLogin" target="_self">Log In</a></li>
        </ul>
        <div class="tabs-content"  data-tabs-content="example-tabs">
            <div class="tabs-panel is-active" id="panelRegister">
              <div class="row">
                <div class="large-12 columns">
                  <p>Sign Up with CareDash to Edit Your Provider Profile</p>
                </div>
                <% if flash[:notice] %>
                  <div class="large-12 columns flash">
                    <%= flash[:notice].join(", ") %>
                  </div>
                  <br/>
                <% end %>
                <%= form_for @user do |f| %>
                <div class="large-6 columns">
                  <div class="field">
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name %>
                  </div>
                </div>
                <div class="large-6 columns">
                  <div class="field">
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name %>
                  </div>
                </div>
                <div class="large-12 columns">
                  <div class="field">
                    <%= f.label :email %>
                    <%= f.text_field :email %>
                  </div>
                </div>
                <div class="large-6 columns">
                  <div class="field">
                    <%= f.label :password, "Password 6 char min" %>
                    <%= f.text_field :password %>
                  </div>
                </div>
                <div class="large-6 columns">
                  <div class="field">
                    <%= f.label :password_confirmation %>
                    <%= f.text_field :password_confirmation %>
                  </div>
                </div>
                <div class="large-12 columns">
                  <div class="action">
                    <%= f.submit "Sign Up"%>
                  </div>
                </div>
                <% end %>
              </div>
              <!--/row-->
            </div>
            <div class="tabs-panel" id="panelLogin">
              <div class="row">
                <div class="large-12 columns">
                  <p>Log In to CareDash to Edit Your Provider Profile</p>
                </div>
                <% if flash[:notice] %>
                  <div class="large-12 columns flash">
                    <%= flash[:notice].join(", ") %>
                  </div>
                  <br/>
                <% end %>
                <%= form_for @user do |f| %>
                <div class="large-12 columns">
                  <div class="field">
                    <%= f.label :email %>
                    <%= f.text_field :email %>
                  </div>
                </div>
                <div class="large-12 columns">
                  <div class="field">
                    <%= f.label :password, "Password 6 char min" %>
                    <%= f.text_field :password %>
                  </div>
                </div>
                <div class="large-6 columns">
                  <div class="switch">
                    <input id="rememberMe" type="checkbox">
                    <label for="rememberMe"> Remember me</label>
                  </div>
                </div>
                <div class="large-12 columns">
                  <div class="action">
                    <%= f.submit "Log in"%>
                  </div>
                </div>
                <% end %>
              </div>
              <!--/row-->
            </div>
          </div>
          <!-- /foundation tabs -->
        </div>
      </div>
    </form>
</div>

